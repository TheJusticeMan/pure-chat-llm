{
  "name": "pure-chat-llm",
  "version": "1.11.1",
  "description": "Turn notes into conversations with chatGPT",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json src/assets/s.json",
    "release": "bash Release.sh",
    "lint": "eslint \"src/**/*.ts\"",
    "copy-to-mobile-vault": "kioclient5 --overwrite copy styles.css manifest.json main.js \"mtp:/Armor X31 Pro/Internal shared storage/Documents/Obsidian/.obsidian/plugins/pure-chat-llm/\""
  },
  "keywords": [
    "obsidian",
    "plugin",
    "chatbot",
    "language model",
    "LLM",
    "notes"
  ],
  "author": "Justice Vellacott",
  "license": "MIT",
  "devDependencies": {
    "@codemirror/language": "^6.11.3",
    "@codemirror/view": "^6.38.3",
    "@eslint/js": "^9.39.2",
    "@types/glob-to-regexp": "^0.4.4",
    "@types/node": "^25.0.2",
    "builtin-modules": "5.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "globals": "^16.5.0",
    "obsidian": "latest",
    "prettier": "^3.7.4",
    "prettier-plugin-sh": "^0.18.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "glob-to-regexp": "^0.4.1"
  }
}
